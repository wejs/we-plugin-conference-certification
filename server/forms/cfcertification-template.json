{
  "title": "cfcertification-template",
  "method": "post",

  "fields": {
    "name": {
      "type": "text",
      "allowNull": false
    },
    "text": {
      "type": "textarea",
      "allowNull": false
    },
    "textPosition": {
      "type": "certificationTextPositionSelector",
      "fieldOptions": {
        "middle": "middle",
        "left": "left",
        "right": "right"
      },
      "defaultValue": "middle"
    },
    "image": {
      "type": "file/image"
    },
    "published": {
      "type": "boolean",
      "defaultValue": false
    },
    "id": {
      "type": "hidden"
    }
  },
  "actions": {
    "submit": {
      "type": "submit"
    }
  }
}