<div class="actions">
  <form action="/event/{{event.id}}/admin/certification/generate" method="post">
    <input name="redirectTo" type="hidden" value="{{req.path}}">
    <button class="btn btn-sm btn-default">{{t 'cfcertification.generate.all'}}</button>
  </form>
</div>

<div class="panel panel-default">
  <div class="panel-body">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>{{t 'name'}}</th>
        <th>{{t 'actions'}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each cfregistrationtypes}}
        <tr>
          <td>{{id}}</td>
          <td>{{name}}</td>
          <td>
            {{#link-to 'cfcertification.updateTemplate' ../event.id 'cfregistrationtype' id class="btn btn-default btn-sm"}}
              {{#if certificationTemplate}}
                {{t 'edit'}}
              {{else}}
                {{t 'add'}}
              {{/if}}
            {{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot></tfoot>
  </table>
  </div>
</div>

